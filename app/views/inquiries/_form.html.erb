<%= form_with(model: inquiry, html: { class: 'form', novalidate: true }) do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>

  <div class="card shadow-sm bordered p-4">
    <div class="form-group mb-4">
      <%= f.label :reason %>
      <%= f.select :reason, Inquiry.reasons.map{|k,v| [k.titleize, k]}, {},
        {
          id: "form-reason-select",
          class: 'form-control selectpicker',
          data: {width: '100%'}
        } %>
    </div>

    <div class="form-group mb-4">
      <%= f.label :body, 'How can we help?' %>
      <%= f.text_area :body, size: "30x10", class: 'inquiry-content' %>
    </div>

    <div class="actions">
      <div class="row">
        <div class="col-12 text-right">
          <%= f.submit "SAVE", class: "btn btn-sm btn-purple" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
